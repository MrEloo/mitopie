{% extends "layout.html.twig" %}

{% block main %}
	<div class="container">
		<div class="row">
			<div class="col-md-12 mb-3">
				<a href="index.php?route=categories_alives" class="btn btn-secondary">Retour</a>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 offset-md-3">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title">Modifier la catégorie "{{ categorie.nom }}"</h5>
						<form method="post" action="index.php?route=modifier_categorieVivant_&id={{ categorie.id }}">
							<div class="form-group">
								<label for="nom">Nom de la catégorie</label>
								<input type="text" class="form-control" id="nom" name="nom" value="{{ categorie.nom }}">
							</div>
							<div class="form-group">
								<label for="media">Media de la catégorie</label>
								<input type="text" class="form-control" id="media" name="media" value="{{ categorie.media }}">
							</div>
							<button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
