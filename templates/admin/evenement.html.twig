{% extends "layout.html.twig" %}

{% block main %}
	<main>
		<div class="container">
			<div class="row">
				<div class="col-md-12 mb-3">
					<a href="index.php?route=admin" class="btn btn-secondary">Retour</a>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<a href="index.php?route=ajouter_evenement" class="btn btn-success">Ajouter un evenement</a>
				</div>
			</div>
			<div class="row">
				{% for evenement in evenements %}
					<div class="col-md-4 mb-4">
						<div class="card">
							<div class="card-body">
								<h5 class="card-title">{{ evenement.titre }}</h5>
								<p class="card-text">{{ evenement.description }}</p>
								<a href="index.php?route=modifier_evenement&id={{ evenement.id }}" class="btn btn-primary">Modifier</a>
								<a href="index.php?route=supprimer_evenement&id={{ evenement.id }}" class="btn btn-danger">Supprimer</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</main>
{% endblock %}
