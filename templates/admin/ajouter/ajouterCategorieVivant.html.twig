{% extends "layout.html.twig" %}

{% block main %}
	<div class="container">
		<div class="row">
			<div class="col-md-12 mb-3">
				<a href="index.php?route=categories_alives" class="btn btn-secondary">Retour</a>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 offset-md-3">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title">Ajouter une nouvelle catégorie</h5>
						<form method="post" action="index.php?route=ajouter_categorieVivant_">
							<input type="hidden" name="media_url" value="{{ produit.media }}">
							<div class="form-group">
								<label for="nom">Nom de la catégorie</label>
								<input type="text" class="form-control" id="nom" name="nom">
							</div>
							<div class="form-group">
								<label class="label_image" for="input_file">{{produit.media}}</label>
								<input type="file" accept="image/jpeg, image/png, image/jpg" name="input_file" id="input_file">
							</div>
							<button type="submit" class="btn btn-primary">Ajouter la catégorie</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
