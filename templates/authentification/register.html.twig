{% extends "layout.html.twig" %}

{% block main %}
	<main>
		<form class='register_form' action="index.php?route=check-register" method="POST">
			<h2>Connexion</h2>
			<input type="hidden" name="csrf_token" id="csrf_token" value="{{ session.csrf_token }}" required/>
			<fieldset>
				<label for="nom">Nom :</label>
				<input type="text" id="nom" name="nom" placeholder="Entrez votre nom" required>
			</fieldset>
			<fieldset>
				<label for="prenom">Prénom :</label>
				<input type="text" id="prenom" name="prenom" placeholder="Entrez votre prénom" required>
			</fieldset>
			<fieldset>
				<label for="email">Email :</label>
				<input type="email" id="email" name="email" placeholder="Entrez votre email" required>
			</fieldset>
			<fieldset>
				<label for="password">Mot de passe :</label>
				<input type="password" id="password" name="password" placeholder="Entrez votre mot de passe" required>
			</fieldset>
			<fieldset>
				<label for="confirm_password">Confirmez le mot de passe :</label>
				<input type="password" id="confirm_password" name="confirm_password" placeholder="Confirmez votre mot de passe" required>
			</fieldset>
			<fieldset>
				<label for="telephone">Téléphone :</label>
				<input type="tel" id="telephone" name="telephone" placeholder="Entrez votre numéro de téléphone" required>
			</fieldset>
			<fieldset>
				<label for="adresse">Adresse :</label>
				<input type="text" id="adresse" name="adresse" placeholder="Entrez votre adresse" required>
			</fieldset>
			<fieldset class="form-row">
				<fieldset>
					<label for="code_postal">Code postal :</label>
					<input type="text" id="code_postal" name="code_postal" placeholder="Entrez votre code postal" required>
				</fieldset>
				<fieldset>
					<label for="ville">Ville :</label>
					<input type="text" id="ville" name="ville" placeholder="Entrez votre ville" required>
				</fieldset>
			</fieldset>
			<fieldset class="newsletter_flex">
				<input type="checkbox" id="newsletter" name="newsletter" value="1">
				<label for="newsletter">S'inscrire à la newsletter</label>
			</fieldset>
			<button type="submit">S'inscrire</button>
			<a href="index.php?route=login">Vous avez déjà un compte ?
				<i class="fa-solid fa-hand-point-right"></i>
			</a>

			{% if session.erreur_regex is defined %}
				<p>{{session.erreur_regex}}</p>
			{% endif %}

			{% if session.erreur_mdp is defined %}
				<p>{{session.erreur_mdp}}</p>
			{% endif %}

			{% if session.erreur_remplissage is defined %}
				<p>{{session.erreur_remplissage}}</p>
			{% endif %}

		</form>
	</main>
{% endblock %}
